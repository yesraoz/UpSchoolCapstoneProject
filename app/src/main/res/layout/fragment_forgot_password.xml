<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yesraoz.capstoneproject.fragment.ForgotPasswordFragment">

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/andika_new_basic"
        android:text="Forgot password"
        android:textColor="@color/mainText"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <EditText
        android:id="@+id/etForgotEmailAddress"
        style="@style/inputTextsStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:background="@drawable/ic_name"
        android:drawableRight="@drawable/ic_fail"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvForgotPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="343dp"
        android:layout_height="60dp"
        android:layout_marginBottom="204dp"
        android:background="@drawable/ic_signupbutton"
        android:text="SEND"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etForgotEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/etForgotEmailAddress"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>